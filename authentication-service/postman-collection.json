  "item": [
    {
      "name": "1. User Onboarding Flow",
      "item": [
        {
          "name": "1.1 Request OTP (New User)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// This script attempts to automatically capture the OTP from the response.",
                  "// If the OTP is not in the response body (e.g., sent via SMS in production),",
                  "// you will need to manually update the 'otp' collection variable.",
                  "if (pm.response.code === 200) {",
                  "    try {",
                  "        var jsonData = pm.response.json();",
                  "        if (jsonData.otp) {",
                  "            pm.collectionVariables.set('otp', jsonData.otp);",
                  "            console.log('OTP variable set from response:', jsonData.otp);",
                  "        }",
                  "    } catch (e) {",
                  "        console.log('Could not parse response or find OTP.');",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"{{phoneNumber}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/request",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "8080",
              "path": [
                "api",
                "v1",
                "auth",
                "request"
              ]
            },
            "description": "Request OTP for new user registration. If phone number doesn't exist, creates new user with PENDING_VERIFICATION status."
          },
          "response": []
        },
        {
          "name": "1.2 Verify OTP (New User)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('stateToken', jsonData.stateToken);",
                  "    console.log('State Token saved:', jsonData.stateToken);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"phoneNumber\": \"{{phoneNumber}}\",\n  \"otp\": \"{{otp}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/v1/auth/verify",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "8080",
              "path": [
                "api",
                "v1",
                "auth",
                "verify"
              ]
            },
            "description": "Verify OTP for new user. Returns stateToken with PIN_SETUP scope (valid for 5 minutes)."
          },
          "response": []
        },
        {
          "name": "1.3 Set PIN (First Time)",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    var jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('accessToken', jsonData.accessToken);",
                  "    pm.collectionVariables.set('refreshToken', jsonData.refreshToken);",
                  "    console.log('Access Token saved');",
                  "    console.log('Refresh Token saved');",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{stateToken}}",
                  "type": "string"
