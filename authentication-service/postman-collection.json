    {
      "name": "5. Session Management",
      "item": [
        {
          "name": "5.1 Get Active Sessions",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "// This script finds a session ID from the response and saves it",
                  "// as 'sessionId' to be used in the 'Terminate Session' request.",
                  "if (pm.response.code === 200) {",
                  "    try {",
                  "        var sessions = pm.response.json();",
                  "        if (sessions && sessions.length > 0) {",
                  "            // Prefer to terminate a different session, not the current one.",
                  "            var sessionToTerminate = sessions.find(s => s.isCurrent === false);",
                  "            ",
                  "            // If no other session exists, for testing purposes, we can use the current one.",
                  "            if (!sessionToTerminate) {",
                  "                sessionToTerminate = sessions[0]; ",
                  "            }",
                  "            ",
                  "            pm.collectionVariables.set('sessionId', sessionToTerminate.sessionId);",
                  "            console.log('Session ID for termination saved:', sessionToTerminate.sessionId);",
                  "        } else {",
                  "            console.log('No active sessions found to terminate.');",
                  "        }",
                  "    } catch (e) {",
                  "        console.log('Could not parse session response.');",
                  "    }",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": {
              "type": "bearer",
              "bearer": [
                {
                  "key": "token",
                  "value": "{{accessToken}}",
                  "type": "string"
                }
              ]
            },
            "method": "GET",
            "header": [
              {
                "key": "X-Refresh-Token",
                "value": "{{refreshToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/v1/sessions",
              "protocol": "http",
              "host": [
                "localhost"
              ],
              "port": "8080",
              "path": [
                "api",
                "v1",
                "sessions"
              ]
            },
            "description": "Get list of all active sessions for authenticated user. Current session marked with isCurrent=true."
          },
          "response": []
        },
